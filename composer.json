{
  "name": "bespoke-support/mail-wrapper",
  "description": "Multi platform mail wrapper",
  "license": "MIT",
  "minimum-stability": "stable",
  "authors": [
    {
      "name": "Richard Seymour",
      "email": "web@bespoke.support"
    }
  ],
  "autoload": {
    "psr-4": {
      "BespokeSupport\\MailWrapper\\": "lib"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "BespokeSupport\\MailWrapper\\Tests\\": "Tests",
      "BespokeSupport\\MailWrapper\\TesterEntity\\": "TesterEntity",
      "BespokeSupport\\MailWrapper\\TesterMessage\\": "TesterMessage",
      "BespokeSupport\\MailWrapper\\TesterTransport\\": "TesterTransport"
    }
  },
  "require" : {
    "php" : ">5.3"
  },
  "require-dev": {
    "swiftmailer/swiftmailer": "~4|~5",
    "mailgun/mailgun-php": "2.*",
    "wildbit/postmark-php": "2.*",
    "bespoke-support/postmark-inbound": "@dev",
    "phpmailer/phpmailer": "~5.2",
    "zendframework/zend-mail": "@stable",
    "pda/pheanstalk": "^3.1",
    "php-http/guzzle6-adapter": "1.*"
  },
  "suggest": {
    "swiftmailer/swiftmailer": "~4|~5",
    "mailgun/mailgun-php": "2.*",
    "wildbit/postmark-php": "2.*",
    "bespoke-support/postmark-inbound": "@dev",
    "phpmailer/phpmailer": "~5.2",
    "zendframework/zend-mail": "@stable",
    "pda/pheanstalk": "^3.1",
    "php-http/guzzle6-adapter": "1.*"
  }
}
